{"identifier":{"interfaceLanguage":"swift","url":"doc:\/\/AuroraEditorTextView\/documentation\/AuroraEditorTextView\/TextView\/fractionOfDistanceThroughGlyph(for:)"},"hierarchy":{"paths":[["doc:\/\/AuroraEditorTextView\/documentation\/AuroraEditorTextView","doc:\/\/AuroraEditorTextView\/documentation\/AuroraEditorTextView\/TextView","doc:\/\/AuroraEditorTextView\/documentation\/AuroraEditorTextView\/TextView\/NSTextInputClient-Implementations"]]},"schemaVersion":{"major":0,"minor":3,"patch":0},"abstract":[{"type":"text","text":"Returns the fraction of the distance from the left side of the character to the right side that a given point"},{"text":" ","type":"text"},{"type":"text","text":"lies."}],"metadata":{"roleHeading":"Instance Method","role":"symbol","symbolKind":"method","extendedModule":"AuroraEditorTextView","externalID":"c:@CM@AuroraEditorTextView@objc(cs)TextView(im)fractionOfDistanceThroughGlyphForPoint:","modules":[{"name":"AuroraEditorTextView"}],"title":"fractionOfDistanceThroughGlyph(for:)","fragments":[{"kind":"keyword","text":"func"},{"text":" ","kind":"text"},{"text":"fractionOfDistanceThroughGlyph","kind":"identifier"},{"kind":"text","text":"("},{"text":"for","kind":"externalParam"},{"text":": ","kind":"text"},{"preciseIdentifier":"c:@T@NSPoint","text":"NSPoint","kind":"typeIdentifier"},{"kind":"text","text":") -> "},{"text":"CGFloat","kind":"typeIdentifier","preciseIdentifier":"s:14CoreFoundation7CGFloatV"}]},"variants":[{"traits":[{"interfaceLanguage":"swift"}],"paths":["\/documentation\/auroraeditortextview\/textview\/fractionofdistancethroughglyph(for:)"]}],"sections":[],"kind":"symbol","primaryContentSections":[{"declarations":[{"platforms":["macOS"],"tokens":[{"kind":"keyword","text":"func"},{"text":" ","kind":"text"},{"kind":"identifier","text":"fractionOfDistanceThroughGlyph"},{"text":"(","kind":"text"},{"kind":"externalParam","text":"for"},{"kind":"text","text":" "},{"text":"point","kind":"internalParam"},{"text":": ","kind":"text"},{"text":"NSPoint","preciseIdentifier":"c:@T@NSPoint","kind":"typeIdentifier"},{"text":") -> ","kind":"text"},{"preciseIdentifier":"s:14CoreFoundation7CGFloatV","kind":"typeIdentifier","text":"CGFloat"}],"languages":["swift"]}],"kind":"declarations"},{"kind":"parameters","parameters":[{"name":"point","content":[{"type":"paragraph","inlineContent":[{"type":"text","text":"The point to test."}]}]}]},{"content":[{"level":2,"text":"Return Value","anchor":"return-value","type":"heading"},{"inlineContent":[{"type":"text","text":"The fraction of the distance aPoint is through the glyph in which it lies. May be 0 or 1 if aPoint"},{"type":"text","text":" "},{"type":"text","text":"is not within the bounding rectangle of a glyph (0 if the point is to the left or above the glyph;"},{"type":"text","text":" "},{"type":"text","text":"1 if it’s to the right or below)."}],"type":"paragraph"}],"kind":"content"},{"kind":"content","content":[{"type":"heading","anchor":"discussion","level":2,"text":"Discussion"},{"type":"paragraph","inlineContent":[{"text":"For purposes such as dragging out a selection or placing the insertion point, a partial percentage less than or","type":"text"},{"type":"text","text":" "},{"text":"equal to 0.5 indicates that aPoint should be considered as falling before the glyph; a partial percentage","type":"text"},{"type":"text","text":" "},{"text":"greater than 0.5 indicates that it should be considered as falling after the glyph. If the nearest glyph doesn’t","type":"text"},{"text":" ","type":"text"},{"type":"text","text":"lie under aPoint at all (for example, if aPoint is beyond the beginning or end of a line), this ratio is 0 or 1."}]},{"inlineContent":[{"type":"text","text":"For example, if the glyph stream contains the glyphs “A” and “b”, with the width of “A” being 13 points, and"},{"text":" ","type":"text"},{"type":"text","text":"aPoint is 8 points from the left side of “A”, then the fraction of the distance is 8\/13, or 0.615. In this"},{"text":" ","type":"text"},{"type":"text","text":"case, the aPoint should be considered as falling between “A” and “b” for purposes such as dragging out a"},{"type":"text","text":" "},{"text":"selection or placing the insertion point.","type":"text"}],"type":"paragraph"}]}],"references":{"doc://AuroraEditorTextView/documentation/AuroraEditorTextView/TextView/fractionOfDistanceThroughGlyph(for:)":{"type":"topic","role":"symbol","abstract":[{"type":"text","text":"Returns the fraction of the distance from the left side of the character to the right side that a given point"},{"type":"text","text":" "},{"type":"text","text":"lies."}],"fragments":[{"text":"func","kind":"keyword"},{"text":" ","kind":"text"},{"kind":"identifier","text":"fractionOfDistanceThroughGlyph"},{"text":"(","kind":"text"},{"text":"for","kind":"externalParam"},{"text":": ","kind":"text"},{"preciseIdentifier":"c:@T@NSPoint","text":"NSPoint","kind":"typeIdentifier"},{"text":") -> ","kind":"text"},{"text":"CGFloat","kind":"typeIdentifier","preciseIdentifier":"s:14CoreFoundation7CGFloatV"}],"url":"\/documentation\/auroraeditortextview\/textview\/fractionofdistancethroughglyph(for:)","kind":"symbol","identifier":"doc:\/\/AuroraEditorTextView\/documentation\/AuroraEditorTextView\/TextView\/fractionOfDistanceThroughGlyph(for:)","title":"fractionOfDistanceThroughGlyph(for:)"},"doc://AuroraEditorTextView/documentation/AuroraEditorTextView/TextView/NSTextInputClient-Implementations":{"type":"topic","abstract":[],"role":"collectionGroup","title":"NSTextInputClient Implementations","url":"\/documentation\/auroraeditortextview\/textview\/nstextinputclient-implementations","kind":"article","identifier":"doc:\/\/AuroraEditorTextView\/documentation\/AuroraEditorTextView\/TextView\/NSTextInputClient-Implementations"},"doc://AuroraEditorTextView/documentation/AuroraEditorTextView/TextView":{"abstract":[{"type":"text","text":"A view that draws and handles user interactions with text."},{"type":"text","text":" "},{"type":"text","text":"Optimized